@model IEnumerable<Travel_MVC.Models.AllTour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/TravelAdmin/Views/Shared/_Layout1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var tp in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => tp.Header)
        </td>
        <td>
            @Html.DisplayFor(modelItem => tp.Description)
        </td>
        <td style="width:25%">
            <img class="img-fluid" src="@tp.Photo"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => tp.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=tp.id }) |
            @Html.ActionLink("Details", "Details", new { id=tp.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=tp.id })
        </td>
    </tr>
}

</table>
